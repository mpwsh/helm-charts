<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Portier &ndash; {{ title }}</title>
    <link rel="stylesheet" href="/static/style.css" />
  </head>
  <body>
    <div class="flex-container">
      <div class="form-container">
        <h1 class="head">
          {{ explanation }}
        </h1>
        <aside>
          <br />
          <p>
            <span class="subtitle-white">{{ alternate }}</span>
          </p>
          <br />
          <form id="form" action="/confirm" method="post">
            <span class="subtitle">Code:</span>
            <input type="hidden" name="session" value="{{ session_id }}" />
            <input
              type="text"
              name="code"
              maxlength="20"
              autofocus
              autocomplete="off"
              autocorrect="off"
              autocapitalize="off"
            />
            <br />
            <center>
              <input
                type="submit"
                value="Confirm"
                class="submit-btn"
                id="form"
              />
              <br />
              <span class="powered-by-btn">
                Powered by
                <a href="https://portier.github.io"> Portier</a>
              </span>
            </center>
          </form>
        </aside>
      </div>
    </div>
  </body>
</html>
